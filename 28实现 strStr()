//解法一
class Solution {
    public int strStr(String haystack, String needle) {
        if (needle != null){
            int n = needle.length();
            int m = haystack.length();
            for (int i = 0; i < m - n + 1; i++){
                if (haystack.substring(i, i+n).equals(needle)){
                   return i;
                }
            }
            return -1;
        }
        return 0;        
    }
}

//解法二：调用String类中的indexOf()方法
class Solution {
    public int strStr(String haystack, String needle) {   
        return haystack.indexOf(needle);
    }
}
